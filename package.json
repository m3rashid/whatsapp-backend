{
  "name": "whatsapp-backend",
  "version": "1.0.0",
  "description": "Backend for whatsapp clone",
  "main": "index.js",
  "bin": "dist/index.js",
  "keywords": [],
  "author": "m3rashid<m3rashid.hussain@gmail.com>",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/m3rashid/whatsapp-backend.git"
  },
  "scripts": {
    "lint": "tsc",
    "start": "node dist/index.js",
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --format=esm --sourcemap --packages=external",
    "dev": "run-p dev:*",
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "dev:node": "node --watch --enable-source-maps dist/index.js",
    "dev:esbuild": "pnpm run build --watch"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "mongoose": "^8.1.1",
    "otp-generator": "^4.0.1",
    "pino-http": "^9.0.0",
    "socket.io": "^4.7.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.16",
    "@types/otp-generator": "^4.0.2",
    "esbuild": "^0.20.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.1"
}
